<div class="container">

    <div class="row">

        <div class="col-xs-3">
        	
            <%= render 'books/new', book:@book %>
        </div>

        <div class="col-xs-9">
            	<h2>Index</h2>

            <% @books.each do |book| %>
            	
            		<div class="col-xs-4">
            			<div id="book-content">
            				<div class="book-title">
            					<%= book.title %>
            				</div>
            				<div class="book-body">
            					<%= book.body %>
            				</div>
            			</div>
            		</div>
            	
            <% end %>

        </div>

    </div>
</div>