<div class="container">

    <div class="row">

        <div class="col-xs-4">
            <div class="row">
            <%= render 'books/new', book:@book %>
            </div>
            <div class="row">
            <%= render 'users/info', user:@user %>

            </div>
        </div>

        <div class="col-xs-8">
            	<h2>Index</h2>

            <% @books.each do |book| %>

            		<div class="col-xs-4">
            			<div id="book-content">
            				<div class="book-title">
            					<span class="border"><%= book.title %><span>
            				</div>
            				<div class="book-body">
            					<%= book.body %><br>
                            </div>
                            <div class="book-action">
                                <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                                <%= link_to "show",book_path(book.id) %>
            				</div>
            			</div>
            		</div>

            <% end %>

        </div>

    </div>
</div>
