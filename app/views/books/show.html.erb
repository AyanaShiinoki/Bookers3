<div class="container">
	<div class="row">
		<div class="col-xs-5">
			<div class="col-xs-8 col-md-offset-8">
				<div class="show-user-prolile">
					<div class="book-show-userimage">
						<%= attachment_image_tag @user, :profile_image, :fill, 180, 180, format: 'jpeg',class: "img-circle pull-left profile-thumb" %>
					</div>
					<div class="book-show-username">
						<%= @user.name %><br>
					</div>
					<div class="book-show-introduction">
						<%= @user.introduction %>
					</div>
				</div>
			</div>
		</div>

		<div class="col-xs-7">
			<div class="col-xs-5 col-md-offset-1">
				<div id="book-content">
            			<div class="book-title">
            				<span class="border"><%= @book.title %></span>
            			</div>

	           			<div class="book-body">
            				<%= @book.body %><br>
            			</div>
            			<div class="book-action">
                        	<%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" => "本当に削除しますか？" %>
            			</div>
            	</div>
        	</div>
		</div>
	</div>
</div>