<div class="container">
	<div class="row">
		<h2 class="book-detail">Book Detail</h2>
		<div class="col-xs-5">
			<div class="col-xs-8 col-md-offset-8">
				<div class="show-user-prolile">
					<div class="book-show-userimage">
						<%= attachment_image_tag @user, :profile_image, :fill, 180, 180, format: 'jpeg',class: "img-circle pull-left profile-thumb" %>
					</div>
					<div class="book-show-username">
						<%= link_to "#{@user.name}", user_path(@user.id) %><br>
					</div>
				</div>
			</div>
		</div>

		<div class="col-xs-7">
			<div class="col-xs-5 col-md-offset-1">
				<div id="book-content">
            			<div class="book-title">
            				<span class="book-title-text"><%= @book.title %></span>
            			</div>


	           			<div class="book-body">
            				<%= simple_format(@book.body) %><br>
            			</div>
            			<div class="show-book-action">
            				<%= link_to "Edit", edit_book_path(@book) %>
                        	<%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" => "本当に削除しますか？" %>
            			</div>
            			            			<div class="category">
            				<span>Category:</span>
								<% @book.categories.each do |category| %>
  									<%= category.name %><br>
								<% end %>
            			</div>
            	</div>
        	</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6 col-md-offset-3">

			<div class="comment-content">
				<ul class="list-inline">
					<% @book.post_comments.each do |post_comment| %>
						<li class="list-inline-item">
							<%= attachment_image_tag post_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg' %>
						</li>
					<!-- 	<li class="list-inline-item">
							<%= post_comment.user.name %>
						</li> -->
						<li class="list-inline-item">
							<%= post_comment.comment %>  by  <%= post_comment.user.name%>
							<%= link_to "×", post_comment_path(@book, post_comment), method: :delete,"data-confirm" => "本当に削除しますか？" %>
						</li>
						<br>
					<% end %>
				</ul>
			</div>

			<div class="comment-form">
				<%= form_for [@book, @post_comment] do |f| %>
					<div class="row">
        				<div class="col-sm-12">
            				<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
        				</div>
    				</div>
    				<div class="send">
    						<%= f.submit "Send", class: "btn btn-default" %>
    				</div>
				<% end %>
			</div>


		</div>
	</div>

</div>