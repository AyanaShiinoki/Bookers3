<div class="container">
	<div class="row">
		<div class="col-xs-6 col-md-offset-3">
		<div class="edit_book_form">
			<h2>π”Όπ••π•π•¥π“ƒ</h2>

				<%= form_for(@book) do |f| %>
					<div class="field">
						<%= f.text_field :title,class:"form-control m-4" %>
					</div>

					<div class="field">
						<%= f.text_area :body,class:"form-control m-4"  %>
					</div>

                <div class="category-select">
                    <%= f.label :category, 'Category' %><br>
                    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
                        <%= category.label do %>
                        <%= category.check_box %>
                        <%= category.text %>
                        <% end %>
                    <% end %>
                </div>


					<div class="field">
						<%= f.submit "Update book", class:"btn btn-default"%>
					</div>


				<% end %>


		</div>
		</div>
	</div>
</div>