<div class="new-book-box">
            <h2>New book</h2>
    <div class="new-book-box-content">
            <%= form_for(book) do |f| %>
                <label class = "">Title</label>
                    <div class="newbook-text">
                        <%= f.text_field :title,class:"form-control m-4" %>
                    </div>


                <label class = "">Opinion</label>
                    <div class="newbook-text">
                        <%= f.text_area :body,class:"form-control m-4"  %>
                    </div>

                <div class="category-select">
                    <%= f.label :category, 'Category' %><br>
                    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
                        <%= category.label do %>
                        <%= category.check_box %>
                        <%= category.text %>
                        <% end %>
                    <% end %>
                </div>

                    <div class="create-book">
                        <%= f.submit "Create Book", class:"btn btn-default"%>
                    </div>
            <% end %>
    </div>
</div>

