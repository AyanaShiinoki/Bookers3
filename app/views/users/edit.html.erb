<div class="container">
  <div class="row">


        <div class="edit_form">



<h2>𝔼𝕕𝕚𝕥𓃱</h2>
<%= form_for(@user) do |f| %>
    <div class="field">
        <label>Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputEmail"%>
    </div>

	<div class="field">
    	<label>Image</label>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

    <div class="field">
        <label>Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true%>
    </div>

    <%= f.submit "Update User" %>
<% end %>

        </div>
    </div>
</div>
