<h1>Users#edit</h1>



<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label>Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputEmail"%>
    </div>

	<div class="form-group has-icon">
    	<label>Image</label>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

    <div class="form-group has-icon">
        <label>Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true%>
    </div>

    <%= f.submit "Update User" %>
<% end %>

