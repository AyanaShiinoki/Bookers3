<div class="container">
　<div class="row">
    <div class="col-xs-6 col-md-offset-3">

            <div class="error_message">
                <div id="error_explanation">
                    <% if @user.errors.any? %>
                        <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
                            <ul>
                                <% @user.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                <% end %>
                            </ul>
                    <% end %>
                </div>
            </div>


        <div class="edit_form">
            <h2>𝔼𝕕𝕚𝕥𓃱</h2>
                <%= form_for(@user) do |f| %>
                    <div class="field">
                        <label>Name</label><br>
                            <%= f.text_field :name, autofocus: true, id:"inputEmail"%>
                    </div>

                    <div class="field">
                        <label>Image</label>
                            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                    </div>

                    <div class="field">
                        <label>Introduction</label><br>
                            <%= f.text_area :introduction, autofocus: true%>
                    </div>

                    <%= f.submit "Update User", class:"btn btn-default" %>
                <% end %>
        </div>
    </div>
　</div>
</div>
