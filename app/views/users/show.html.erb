<div class="container">

	<div class="row">
		<h2 class="profile-title">Profile</h2>
			<div class="user-page">
				<div class="col-xs-6 col-md-offset-3">
					<div class="col-xs-6">
						<%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg'%>
					</div>
					<div class="col-xs-6">
						<div class="user-page-name">
							<%= @user.name %>
						</div>
						<div class="user-page-introduction">
							<%= simple_format(@user.introduction) %>
						</div>
					</div>
				</div>
			</div>
	</div>

	<div class="row">
		<div class= "user-books">
			<div class="col-xs-6 col-md-offset-3">
				<% @books.each do |book| %>
					<div class="user-book">
						<span><%= link_to "#{book.title}",book_path(book.id)%></span>
						<br>
					</div>
				<%end%>
			</div>
		</div>

		<div class="paginate">
		<%= paginate @books, class: "paginate" %>
		</div>

	</div>
</div>
